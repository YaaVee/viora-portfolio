// Toggle case study details
function toggleCaseDetails(id) {
    const preview = document.getElementById(`case-preview-${id}`);
    const full = document.getElementById(`case-full-${id}`);
    
    if (full.style.display === 'none') {
        preview.style.display = 'none';
        full.style.display = 'block';
    } else {
        preview.style.display = 'block';
        full.style.display = 'none';
    }
}

// Filter case studies by industry
function filterCaseStudies(industry) {
    // Update active filter button
    document.querySelectorAll('.case-filters .filter-btn').forEach(btn => {
        btn.classList.remove('active');
    });
    event.target.classList.add('active');
    
    // This would need the actual case studies data to filter
    // For now, we'll just show/hide based on the industry mapping
    const industryMap = {
        'financial': [1,2,3,4,5,6,7,8],
        'healthcare': [9,10,11,12,13,14,15,16],
        'retail': [17,18,19,20,21,22,23,24],
        'manufacturing': [25,26,27,28,29,30,31,32],
        'tech': [33,34,35,36,37,38,39,40]
    };
    
    const cards = document.querySelectorAll('.case-card');
    if (industry === 'all') {
        cards.forEach(card => card.style.display = 'block');
    } else {
        cards.forEach((card, index) => {
            const studyId = index + 1;
            if (industryMap[industry].includes(studyId)) {
                card.style.display = 'block';
            } else {
                card.style.display = 'none';
            }
        });
    }
}

